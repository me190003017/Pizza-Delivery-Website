<section class="hero py-16">
    <div class="container mx-auto flex items-center justify-between">
        <div class="w-1/2">
            <h6 class="text-lg"><em>Are you hungry?</em></h6>
            <h1 class="text-3xl md:text-6xl font-bold">Don't wait !</h1>
            <button class="btn-primary rounded-full px-6 py-2 text-white font-bold mt-6"><a href="/cart"> Order Now</a></button>
        </div>
        <div class="w-1/2">
            <img src="/img/hero-pizza.png" alt="hero-pizza">
        </div>
    </div>
</section>

<section class="menu container mx-auto py-8">
    <h1 text-xl font-bold mb-8>All Pizzas</h1>
    <div class="grid  grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4  col-gap-12 my-2  row-gap-16">
        <% pizzas.forEach(function(pizza){ %>
        <div class="my-2 w-full md:w-full lg:w-64">
            <img class="h-40 mb-4 mx-auto" src="/img/<%=pizza.image%>" alt="pizza">
            <div class="text-center">
                <h2 class="mb=4 text-lg"> <%=pizza.name%></h2>
                <span class="size py-1 px-4 rounded-full uppercase text-xs "><%=pizza.size%></span>
                <div class="flex my-6 items-center justify-around">
                    <span class="font-bold text-lg">â‚¹<%=pizza.price%></span>
                    <button data-pizza="<%=JSON.stringify(pizza)%>" class="add-to-cart flex items-center font-bold  py-1 px-6 rounded-full"> <!--data-pizza is attribute-->
                        <span>+</span>
                        <span class="ml-4">Add</span>
                    </button>
                </div>
            </div>
        </div>
        <% })%>

    </div>
</section>