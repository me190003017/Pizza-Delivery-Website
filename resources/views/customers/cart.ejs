<section class="cart py-16">
    <%if(session.cart) { %>
    <div class="order container mx-auto w-3/4  md:w-2/3 lg:w-1/2">
        <div class="flex items-center border-b border-gray-300 pb-4">
            <img src="/img/cart-black.png" alt="cart-black">
            <h1 class="font-bold ml-4 text-2xl">Order summary</h1>
        </div>
        <div class="pizza-list">
            <% for(let pizza of Object.values(session.cart.items)) {%>
            <div class=" my-8 flex items-center">
                <img class="w-24" src="/img/<%= pizza.item.image%>" alt="">
                <div class="ml-4 flex-1">
                    <h1><%= pizza.item.name%></h1>
                    <span><%= pizza.item.size%></span>
                </div>
                <span class="flex-1"><%= pizza.qty%> Pcs</span>
                <span class="font-bold text-lg">‚Çπ<%= pizza.item.price*pizza.qty %></span>
            </div>
            <% }%>
        </div>
        <hr>
        <div class="text-right py-4">
            <div >
                <span class="text-lg font-bold">Total Amount:</span>
                <span class="amount text-2xl font-bold ml-2">‚Çπ<%= session.cart.totalPrice%></span>
            </div>
            <%if(user){%>
            <div>
                <form class="mt-12" action="/orders" method="POST">
                    <input type="text" name="phone" id="" class="mb-4 border border-grey-400 p-2 w-1/2" 
                    placeholder="Phone number">
                    <input type="text" name="address" id="" class="border border-grey-400 p-2 w-1/2" 
                    placeholder="Address">
                    <div>
                        <button class="text-white mt-6 btn-primary rounded-full px-6 py-2" type="submit">
                            Order Now
                        </button>
                    </div>
                </form>
            </div>
            <%} else {%>
            <div>
                <a href="/login" class="inline-block cursor-pointer text-white mt-6 btn-primary rounded-full px-6 py-2 ">
                    Login to continue</a>
            </div>
            <% } %>
        </div>
    </div>
    <% } else {%>

    <div class="empty-cart py-16">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-bold mb-2">Cart Empty üòê</h1>
            <p class="text-gray-500 text-lg mb-12">You probably haven't ordered a pizza yet.<br>
                To order a pizza, go to the main page. 
            </p>
            <img class="w-2/5 mx-auto" src="/img/empty-cart.png" alt="empty-cart">
            <a href="/" class="inline-block px-6 py-2 mt-12 rounded-full btn-primary font-bold text-white">Go back</a>
        </div>
    </div>
    <%}%>
</section>